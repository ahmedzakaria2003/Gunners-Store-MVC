@page
@model LoginModel

<link rel="stylesheet" href="~/css/Account.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="auth-container">
    <!-- Left side - Form -->
    <div class="form-side d-flex flex-column">
        <div class="form-container flex-grow-1 d-flex flex-column justify-content-center">
            <div class="mb-4">
                <h1 class="fw-bold fs-2">Welcome back</h1>
                <p class="text-secondary">Enter your credentials to access your account</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Submit Button -->
                <div>
                    <button id="login-submit" type="submit" class="btn btn-danger w-100 py-2">Log in</button>
                </div>

                <!-- Additional Links -->
                <div class="separator">
                    <span>Or continue with</span>
                </div>

                <button type="button" class="btn social-btn w-100 d-flex align-items-center justify-content-center gap-2" id="facebookButton">
                    <i class="fab fa-facebook fb-icon"></i>
                    Sign in with Facebook
                </button>
            </form>

            <div class="mt-4 text-center">
                <p class="text-secondary">
                    Don't have an account yet?
                    <a asp-page="/Account/Register" class="text-arsenal text-decoration-none fw-medium">Register</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Right side - Image -->
    <div class="image-side">
        <div class="image-overlay">
            <div class="brand-icon">
                <span>G</span>
            </div>
            <h2 class="fs-1 fw-bold">Gunner Store</h2>
            <p class="fs-5">The official store for Arsenal fans</p>
            <div class="brand-separator"></div>
            <p>Get the latest Arsenal merchandise and show your support for the team.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
