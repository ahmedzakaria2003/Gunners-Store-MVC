@model List<Product>


@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";

}

<link href="~/css/ProductDetails.css" rel="stylesheet" />
<div class="container-fluid mt-5">
    <!-- Row for the header section -->
    <div class="row pt-4 pb-3 justify-content-between align-items-center">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="row col-4 justify-content-center ">
            <div class="col-12 text-center">
                <a asp-action="Upsert" class="btn btn-primary w-50">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>

            </div>
    </div>
    </div>

    <!-- Table for displaying categories -->
    <div class="table-responsive  min-vh-100">


        <table class="table table-bordered table-striped" id="tblData">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Brand</th>
                    <th>Description</th>
                    <th>Price</th>
                    
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
           
        </table>
    </div>
</div>


@section Scripts{

    <script src="~/js/product.js"></script>

}