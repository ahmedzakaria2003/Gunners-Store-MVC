@model ProductVM
@{
    ViewData["Title"] = "Create Product";
}

<link href="~/css/category.css" rel="stylesheet" />

<div class="container  min-vh-100">
    <div class="form-container">
        <div class="form-background"></div>
        <div class="form-header">
            <h3> @(Model.Product.ProductID != 0 ? "Update" : "Create") Product </h3>
        </div>

        <div class="form-content ">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.ProductID" hidden />
                 <input asp-for="Product.ImgUrl" hidden /> 

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <!-- Form fields -->
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="form-label" for="Name">Name</label>
                            <input asp-for="Product.ProductName" class="form-control" />
                            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Description">Description</label>
                            <input asp-for="Product.Description" class="form-control" />
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Brand">Brand</label>
                            <input asp-for="Product.Brand" class="form-control" />
                            <span asp-validation-for="Product.Brand" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="ListPrice">ListPrice</label>
                            <input asp-for="Product.ListPrice" class="form-control" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Price">Price</label>
                            <input asp-for="Product.Price" class="form-control" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Price50">Price50</label>
                            <input asp-for="Product.Price50" class="form-control" />
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Price100">Price100</label>
                            <input asp-for="Product.Price100" class="form-control" />
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="ImgUrl">Image</label>
                            <input asp-for="Product.ImgUrl" type="file" name="file" class="form-control" />
                            <span asp-validation-for="Product.ImgUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="Product.Category">Category</label>
                            <select asp-for="@Model.Product.CategoryID" asp-items="@Model.CategoryList"
                                    class="form-control">
                                <option value="@null"> Choose Category </option>
                            </select>
                            <span asp-validation-for="Product.Category" class="text-danger"></span>
                        </div>

                        <div class="form-actions">
                            @if (Model.Product.ProductID != 0)
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Create</button>
                            }

                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                                Back to List
                            </a>
                        </div>
                    </div>

                    <!-- Image preview -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-label">Image</label>
                            <img src="@Model.Product.ImgUrl"  class="img-fluid w-100 " style="max-height: 250px;" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

