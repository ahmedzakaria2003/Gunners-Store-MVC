<link rel="stylesheet" href="~/css/OrderConfirmation.css" />
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<!-- Confirmation Header -->
<header class="confirmation-header mt-5">
    <div class="container">
        <div class="text-center">
            <div class="confirmation-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="mb-2">Order Confirmed!</h1>
            <p class="mb-0">Thank you for your purchase. Your order has been successfully placed.</p>
        </div>
    </div>
</header>

<!-- Confirmation Content -->
<div class="confirmation-container  min-vh-100">
    <div class="row">
        <!-- Rate Your Experience Section -->
        <div class="col-12 col-md-6 mx-auto arsenal-pattern p-4">
            <div class="feedback-prompt">How was your shopping experience?</div>
            <div class="stars-container">
                <button class="star-btn" data-rating="1"><i class="far fa-star"></i></button>
                <button class="star-btn" data-rating="2"><i class="far fa-star"></i></button>
                <button class="star-btn" data-rating="3"><i class="far fa-star"></i></button>
                <button class="star-btn" data-rating="4"><i class="far fa-star"></i></button>
                <button class="star-btn" data-rating="5"><i class="far fa-star"></i></button>
            </div>
            <div class="thank-you-message" id="thankYouMessage">
                Thank you for your feedback! COYG! (Come On You Gunners!)
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const starBtns = document.querySelectorAll('.star-btn');
    const thankYouMessage = document.getElementById('thankYouMessage');

    starBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const rating = parseInt(btn.getAttribute('data-rating'));

        starBtns.forEach(star => {
          star.innerHTML = '<i class="far fa-star"></i>';
        });

        for (let i = 0; i < rating; i++) {
          starBtns[i].innerHTML = '<i class="fas fa-star"></i>';
        }

        thankYouMessage.style.display = 'block';

        console.log(`User rated their experience: ${rating}/5 stars`);
      });

      btn.addEventListener('mouseenter', () => {
        const rating = parseInt(btn.getAttribute('data-rating'));

        for (let i = 0; i < rating; i++) {
          starBtns[i].innerHTML = '<i class="fas fa-star"></i>';
        }
      });

      btn.addEventListener('mouseleave', () => {
        starBtns.forEach(star => {
          star.innerHTML = '<i class="far fa-star"></i>';
        });
      });
    });
</script>


















